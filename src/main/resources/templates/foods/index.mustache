
{{>layouts/header}}


<div class="jumbotron">
    <h1 class="display-4">음식목록</h1>

    <a class="btn btn-primary btn-lg" href="/foods/new" role="button">추가하기</a>
</div>






<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">이름</th>

    </tr>
    </thead>
    <tbody>

    {{#foodList}}
    <tr>
        <td>{{id}}</td>
        <td>
            <a href="/foods/{{id}}">{{name}}</a>

        </td>
        <td>
            <a href="/foods/edit/{{id}}" class="btn btn-primary">수정</a>
        </td>
        <td>
            <a href="/foods/delete/{{id}}" class="btn btn-danger">삭제</a>
        </td>

    </tr>
    {{/foodList}}

    </tbody>
</table>


